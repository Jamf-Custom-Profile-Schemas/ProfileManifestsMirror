{
    "title": "Finder (com.apple.finder)",
    "description": "The payload that configures Finder settings.",
    "properties": {
        "InterfaceLevel": {
            "type": "string",
            "title": "Finder Interface Level",
            "default": "Full",
            "description": "Specifies whether Finder should operate in Simple or Full mode.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "enum": [
                "Simple",
                "Full"
            ],
            "property_order": 5
        },
        "WarnOnEmptyTrash": {
            "type": "boolean",
            "title": "Show warning before emptying the Trash",
            "default": true,
            "description": "If 'false', the system doesn't warn the user before emptying the trash.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 10
        },
        "ProhibitConnectTo": {
            "type": "boolean",
            "title": "Allow Connect to Server",
            "default": false,
            "description": "If 'true', the system disables Connect to Server.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 15
        },
        "ProhibitEject": {
            "type": "boolean",
            "title": "Allow Eject",
            "default": false,
            "description": "If 'true', the system disables Eject.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 20
        },
        "ProhibitBurn": {
            "type": "boolean",
            "title": "Allow Burn Disc",
            "default": false,
            "description": "If 'true', the system disables the Finder's burn support.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 25
        },
        "ProhibitGoToFolder": {
            "type": "boolean",
            "title": "Allow Go to Folder",
            "default": false,
            "description": "If 'true', the system disables Go to Folder.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 30
        },
        "ShowHardDrivesOnDesktop": {
            "type": "boolean",
            "title": "Show Hard disks",
            "default": false,
            "description": "If 'false', the system doesn't show internal hard drives on the Desktop.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 35
        },
        "ShowExternalHardDrivesOnDesktop": {
            "type": "boolean",
            "title": "Show External disks",
            "default": true,
            "description": "If 'false', the system doesn't show external hard drives on the Desktop.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 40
        },
        "ShowRemovableMediaOnDesktop": {
            "type": "boolean",
            "title": "Show Removable media (CDs, DVDs, etc.)",
            "default": true,
            "description": "If 'false', the system doesn't show removable media items on the Desktop.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 45
        },
        "ShowMountedServersOnDesktop": {
            "type": "boolean",
            "title": "Show Connected servers",
            "default": false,
            "description": "If 'false', the system doesn't show mounted file servers on the Desktop.",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://developer.apple.com/documentation/devicemanagement/finder"
                }
            ],
            "property_order": 50
        },
        "ShowRecentTags": {
            "type": "boolean",
            "title": "Show Recent Tags",
            "default": true,
            "description": "Show the Recent Tags section in the Finder sidebar",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://derflounder.wordpress.com/2021/11/29/disabling-recent-tags-in-the-finder-window-sidebar/"
                }
            ],
            "property_order": 55
        },
        "FXRemoveOldTrashItems": {
            "type": "boolean",
            "title": "Remove Old Trash Items",
            "default": true,
            "description": "Remove items from the Trash after 30 days",
            "links": [
                {
                    "rel": "More information",
                    "href": "https://derflounder.wordpress.com/2016/10/30/enabling-the-remove-items-from-the-trash-after-30-days-setting-on-macos-sierra/"
                }
            ],
            "property_order": 60
        }
    }
}