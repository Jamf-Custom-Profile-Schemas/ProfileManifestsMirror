{
    "title": "Firewall (com.apple.security.firewall)",
    "description": "Firewall settings",
    "properties": {
        "EnableFirewall": {
            "type": "boolean",
            "title": "Enable Firewall",
            "description": "Enables the firewall on managed Mac computers.",
            "property_order": 5
        },
        "BlockAllIncoming": {
            "type": "boolean",
            "title": "Block All Incoming Connections",
            "default": false,
            "description": "Blocks all incoming connections except those required for basic Internet services, such as DHCP, Bonjour and IPSec.",
            "property_order": 10
        },
        "EnableStealthMode": {
            "type": "boolean",
            "title": "Enable Stealth Mode",
            "default": false,
            "description": "Don't respond to or acknowledge attempts to access this computer from the network by test applications using ICMP, such as Ping.",
            "property_order": 15
        },
        "Applications": {
            "type": "array",
            "items": {
                "type": "object",
                "title": "Application Item",
                "description": "A firewall application item-",
                "properties": {
                    "BundleID": {
                        "type": "string",
                        "title": "Bundle ID",
                        "description": "Identifies the application"
                    },
                    "Name": {
                        "type": "string",
                        "title": "Name",
                        "description": "Name of application (Undocumented)"
                    },
                    "Allowed": {
                        "type": "boolean",
                        "title": "Allowed",
                        "description": "Specifies whether or not incoming connections are allowed."
                    }
                }
            },
            "title": "Applications",
            "description": "Add applications to either allow or block them from connecting to your network and the Internet.",
            "property_order": 20
        },
        "EnableLogging": {
            "type": "boolean",
            "title": "Enable Logging",
            "default": false,
            "property_order": 25
        },
        "LoggingOption": {
            "type": "string",
            "title": "Logging Option",
            "enum": [
                "throttled",
                "brief",
                "detail"
            ],
            "options": {
                "enum_titles": [
                    "Throttled",
                    "Brief",
                    "Detail"
                ]
            },
            "property_order": 30
        },
        "AllowSigned": {
            "type": "boolean",
            "title": "Allow Incoming Connections to macOS-Bundled Software",
            "property_order": 35
        },
        "AllowSignedApp": {
            "type": "boolean",
            "title": "Allow Incoming Connections to Downloaded Signed Apps",
            "property_order": 40
        }
    }
}