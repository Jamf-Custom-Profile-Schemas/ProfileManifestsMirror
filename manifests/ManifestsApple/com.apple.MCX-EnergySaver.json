    "properties": {
        "com.apple.EnergySaver.desktop.ACPower": {
            "type": "object",
            "title": "Desktop Energy Saver Settings",
            "description": "The settings for a desktop computer.",
            "properties": {
                "Display Sleep Timer": {
                    "type": "integer",
                    "title": "Display Sleep Timer",
                    "description": "The display sleep time, in minutes. A value of 0 means never."
                },
                "System Sleep Timer": {
                    "type": "integer",
                    "title": "System Sleep Timer",
                    "description": "System sleep time, in minutes. A value of 0 means never."
                },
                "Disk Sleep Timer": {
                    "type": "integer",
                    "title": "Disk(s) Sleep Timer",
                    "default": 10,
                    "description": "The disk sleep time, in minutes. A value of 0 means never."
                },
                "Wake on LAN": {
                    "type": "integer",
                    "title": "Wake on LAN",
                    "description": "If 'true', enables \"Wake for network access.\"",
                    "enum": [
                        0,
                        1
                    ]
                },
                "Wake On Modem Ring": {
                    "type": "integer",
                    "title": "Wake On Modem Ring",
                    "description": "If 'true', enables \"Wake for modem ring.\"",
                    "enum": [
                        0,
                        1
                    ]
                },
                "Automatic Restart On Power Loss": {
                    "type": "integer",
                    "title": "Start up Automatically After a Power Failure",
                    "description": "If 'true', enables \"Start up automatically after a power failure.\"",
                    "enum": [
                        0,
                        1
                    ]
                },
                "Dynamic Power Step": {
                    "type": "integer",
                    "title": "Dynamic Power Step",
                    "description": "May not be available on all systems.",
                    "enum": [
                        0,
                        1
                    ]
                },
                "Reduce Processor Speed": {
